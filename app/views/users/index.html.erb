<div class="content-wrapper">
 <section class="content-header">
<p id="notice"><%= notice %></p>
<h1>Listado de usuarios</h1>

<table>
  <thead>
    <tr>
			<th>Nombre</th>
      <th>Email</th>
      <th>Cuenta</th>
			<th>Rol</th>
      <% if !userIsCoordinator %>
			<th>Carrera</th>
      <% end %>
      <th>Telefono</th>
      <th>Informacion Adicional</th>
			<th></th>
			<th></th>
      <th></th>
      <th></th>
      <% if !userIsCoordinator %>
      <th></th>
      <% end %>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   <% if userIsAdmin %>
      <% @users.each do |user| %>
      <tr>
        <td><a href="/users/<%=user.id%>/edit"><%= user.name %></a></td>
        <td><%= user.email %></td>
        <td><%= user.cuenta %></td>
        <td><%= user.role.name %></td>
        <td><%= user.career.name %></td>
        <td><%= user.telefono %></td>
        <td><%= user.informacion_adicional %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
       </tr>
      <% end %>
   <% else %>
    <% @users.where(career_id: current_user.career_id).each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.cuenta %></td>
        <td><%= user.role.name %></td>
        <% if !userIsCoordinator %>
        <td><%= user.career.name %></td>
        <% end %>
        <td><%= user.telefono %></td>
        <td><%= user.informacion_adicional %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
       </tr>
    <% end %>
   <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path %>
</section>
</div>
