<div class="content-wrapper">
 <section class="content-header">
<div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Listado de Clases Disponibles</h3>
                
		            <div class="box-tools">
                  <form role="form" accept-charset="UTF-8" action="/courses" method="get" class="nifty_form">
                    <div class="input-group">
                      <input name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" type="text">
                      <div class="input-group-btn">
                        <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                      </div>
                    </div>
                  </form>
                </div>

                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                  <table class="table table-hover">
                    <tbody><tr>
		      <th>Clase</th>
		      <th>Requisitos</th>
		      <th>Requisitos recomendados</th>
		      	<% if !userIsCoordinator %>
					<th>Carrera</th>
					<th></th>
			<% end %>
		      <th></th>
		      <th></th>
		      <th></th>
		    </tr>
		    <% @courses.each do |course| %>
		      <tr>
			<td><%= course.name %></td>
			<td><%= course.requirements %></td>
			<td><%= course.recommended_requirements %></td>
			<% if !userIsCoordinator %>
						<td><%= course.career.name %></td>
			<% end %>
			<td><%= link_to 'Mostrar', course %></td>
			<td><%= link_to 'Editar', edit_course_path(course) %></td>
			<%if userIsAdmin || userIsCoordinator%>
			  <td><%= link_to 'Borrar', course, method: :delete, data: { confirm: 'Â¿Borrar clase?' } %></td>
			<%end%>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		</div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
          </div>
	<div class="box-footer">
	<%= link_to 'Nueva clase', new_course_path, class: "btn btn-primary" %>
	</div>
</section>
</div>
