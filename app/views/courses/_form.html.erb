
<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Clase %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Requisitos %><br>
    <%= f.text_field :requirements %>
  </div>
  <div class="field">
    <%= f.label :Requisitos_recomendados %><br>
    <%= f.text_field :recommended_requirements %>
  </div>
		<p>
    <%= f.label :Carrera %><br />
    <% if !userIsAdmin %>
      <%= f.hidden_field :career_id, {:value => current_user.career_id, :name => 'user[career_id]'} %>
		  <%= current_user.career.name %>
    <% else %>
      <select name="course[career_id]">
        <% Career.all.each do |c| %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% end %>
      </select>
    <% end %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</section>
</div>
