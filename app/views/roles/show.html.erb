<% if current_user %>
<div class="content-wrapper">
 <section class="content-header">

<% if userIsAdmin %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Rol:</strong>
  <%= @role.name %>
</p>

<%= link_to 'Editar', edit_role_path(@role) %> |
<%= link_to 'Regresar', roles_path %>
<% else %>
	<%= controller.redirect_to requests_path %>
<% end %>

</section>
</div>
<% else %>
<%= controller.redirect_to log_in_path %>
<% end %>
