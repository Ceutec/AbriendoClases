<div class="content-wrapper">
 <section class="content-header">
<h1>Listado de roles</h1>

<table>
  <thead>
    <tr>
      <th>Rol</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Mostrar', role %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Borrar', role, method: :delete, data: { confirm: 'Borrar rol?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Rol', new_role_path %>
</section>
</div>
