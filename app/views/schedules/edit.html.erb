<% if current_user %>
<div class="content-wrapper">
 <section class="content-header">

<% if userIsAdmin %>
	<h1>Editando horario</h1>

	<%= render 'form' %>

	<%= link_to 'Mostrar', @schedule %> |
	<%= link_to 'Regresar', schedules_path %>
<% else %>
